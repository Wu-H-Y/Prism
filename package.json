{
  "name": "prism",
  "version": "0.1.7",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "preview": "vite preview",
    "prepare": "husky install",
    "test:lint": "lint-staged",
    "release": "commit-and-tag-version && node scripts/sync-cargo-version.js",
    "release:patch": "commit-and-tag-version --release-as patch && node scripts/sync-cargo-version.js",
    "release:minor": "commit-and-tag-version --release-as minor && node scripts/sync-cargo-version.js",
    "release:major": "commit-and-tag-version --release-as major && node scripts/sync-cargo-version.js",
    "release:dry": "commit-and-tag-version --dry-run",
    "release:prerelease": "commit-and-tag-version --prerelease && node scripts/sync-cargo-version.js"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@hugeicons/core-free-icons": "^3.0.0",
    "@hugeicons/react": "^1.1.2",
    "@tailwindcss/vite": "^4.1.17",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.561.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.6.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "video.js": "^8.23.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.1",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/video.js": "^7.3.58",
    "@vitejs/plugin-react": "^5.1.1",
    "commit-and-tag-version": "^12.6.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.22.0",
    "oxlint": "^1.37.0",
    "oxlint-tsgolint": "^0.10.1",
    "smol-toml": "^1.6.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@latest"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.{json,css,md,yml,yaml}": [
      "oxfmt"
    ],
    "src-tauri/**/*.rs": [
      "sh -c 'cd src-tauri && cargo clippy --fix --allow-dirty --allow-staged --all-targets --all-features'",
      "sh -c 'cd src-tauri && cargo +nightly fmt --all'",
      "sh -c 'cd src-tauri && cargo clippy --all-targets --all-features -- -D warnings'"
    ]
  }
}
